{
    "name": "@react-input-validator/native",
    "version": "2.0.0",
    "description": "Doing validation to the form inputs in React Native app",
    "author": "AT Mulyana <atmulyana@yahoo.com>",
    "license": "MIT",
    "repository": "https://github.com/atmulyana/react-input-validator",
    "keywords": [
        "react",
        "react-native",
        "form",
        "input",
        "validation",
        "validator"
    ],
    "scripts": {
        "build": "tsc -p .",
        "prepack": "npm run build && shx cp -u ../../README.md ./README.md && shx cp -u ../../LICENSE ./LICENSE",
        "test": "jest"
    },
    "main": "dist/index.js",
    "exports": {
        ".": "./dist/index.js",
        "./messages": "./dist/messages.js",
        "./types": "./dist/types/index.js",
        "./types/*": "./dist/types/*.js"
    },
    "files": [
        "*",
        "!__tests__/*",
        "!babel.config.js",
        "!tsconfig.json"
    ],
    "engines": {
        "node": ">=14.13.0"
    },
    "dependencies": {
        "@react-input-validator/core": "^2.0.0",
        "javascript-common": "*"
    },
    "devDependencies": {
        "@babel/core": "^7.27.7",
        "@react-native/metro-config": "^0.80.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/react-native": "^13.2.0",
        "@types/react": "^19.1.8",
        "babel-jest": "^30.0.2",
        "jest": "^30.0.3",
        "typescript": "^5.8.3"
    },
    "peerDependencies": {
        "react": ">=16.8.0",
        "react-native": "*"
    },
    "jest": {
        "preset": "react-native",
        "testMatch": [
            "**/__tests__/**/*.+(spec|test).[jt]s?(x)"
        ]
    }
}
